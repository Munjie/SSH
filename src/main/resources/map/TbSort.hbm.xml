<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mwj.model.TbSort" table="TB_SORT" schema="SCOTT">
        <id name="id">
            <column name="ID" sql-type="number(6)" precision="6"/>
        </id>
        <property name="name">
            <column name="NAME" sql-type="varchar2(20)" length="20"/>
        </property>
        <set name="books" inverse="true">
            <key>
                <column name="ID"/>
            </key>
            <one-to-many not-found="ignore" class="com.mwj.model.TbBooks"/>
        </set>
    </class>
</hibernate-mapping>